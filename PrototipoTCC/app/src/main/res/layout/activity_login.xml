<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.desktop.prototipotcc.LoginActivity">

    <!-- Login progress -->

    <EditText
        android:id="@+id/edtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Username or Email"
        android:inputType="textEmailAddress"
        android:singleLine="false" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtUser"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="false" />

    <TextView
        android:id="@+id/tvSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtPass"
        android:text="Sign up. " />

    <TextView
        android:id="@+id/tvEsqsen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvSign"
        android:layout_alignBottom="@+id/tvSign"
        android:layout_alignParentEnd="true"
        android:text="Forgot your password." />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEsqsen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:background="#b30000"
        android:text="LOGIN" />

    <EditText
        android:id="@+id/edtT1"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:enabled="false" />

    <EditText
        android:id="@+id/edtT2"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvOu"
        android:layout_alignEnd="@+id/tvEsqsen"
        android:ems="10"
        android:inputType="textPersonName"
        tools:enabled="false" />

    <TextView
        android:id="@+id/tvOu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="or"
        tools:textSize="20sp" />

    <ImageView
        android:id="@+id/ivLogGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvEsqsen"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvOu"
        android:layout_marginTop="41dp"
        app:srcCompat="@drawable/googlelogin"
        tools:layout_width="wrap_content" />

</RelativeLayout>
